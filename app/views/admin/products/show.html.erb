<!--=== 商品資訊 ===-->
<h1> <%= @product.title %> </h1>

<!-- 商品圖片 -->
<div class='col-xs-12 col-md-8 product-image'>
  <div class="row">
    <% if @product.image.present? %>
      <%= image_tag(@product.image.medium.url, class: "thumbnail") %>
    <% else %>
      <%= image_tag("http://placehold.it/400x400&text=No Pic", class: "thumbnail") %>
    <% end %>
  </div>
</div>

<!-- 所屬主類別 -->
<h3>类型</h3>
<p>
  <%= @product.category.category_group.name %>
</p>

<!-- 所屬類別 -->
<h3>商品分类</h3>
<p>
  <%= @product.category.name %>
</p>


<!-- 商品價錢 -->
<h3>商品價錢</h3>
<p>
  <%= @product.price %>
</p>

<!-- 商品數量 -->
<h3>商品數量</h3>
<p>
  <%= @product.quantity %>
</p>
