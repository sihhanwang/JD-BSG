       <br>
       <h1 class="text-center" style="color:white">课程列表</h1>
      <p class="text-center" style="color:white">欢迎来到 <span class="w3-tag" style="color:highlight">夏季课程</span></p>
    </div>


        <div class="product-index">
        <div class="container">
          <!-- 左側：產品列表，佔 8/12 -->



          <section class="col-md-8 main">
            <% @products.each_with_index do |product, index| %>
              <!-- 单个产品 -->
              <div class="row">
                <div class="w3-card-4 w3-margin w3-white">
                  <!-- 产品图 -->
                <div class="clip">
                  <%=link_to product_path(product) do %>
                <% if product.image.present? %>
                <%= image_tag(product.image.thumb.url, class: "clip") %>
                <% else %>
                <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "clip") %>
                <% end %>
                </div>
                <!-- 产品信息部分 -->
                <div class="w3-container">
                <h3><%= link_to(product.title , product_path(product)) %></h3>
                <p><span class="w3-tag" style="background-color:red">线下课程</span></p>
                <h5><span class="w3-opacity">$<%= product.price %></span></h5>
                <div class="w3-col m8 s12">
                  <p><button class="w3-button w3-padding-large w3-white w3-border"><b><%= link_to("课程详情 »" , product_path(product)) %></b></button></p>
                </div>
                <div class="w3-col m4 w3-hide-small">
                  <p><span class="w3-padding-large w3-right"><b>课程席位 &nbsp;</b> <span class="w3-tag"><%= product.quantity %></span></span></p>
                </div>
                </div>
                </div>
              </div>
            <% end %>
            <% end %>
          </section>
















          <!-- 右側：廣告欄位，佔 4/12 -->
