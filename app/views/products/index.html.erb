<div class="productcatnav" >
  <div id="flipkart2-navbar">
    <div class="container">

        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav navbar-left">
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                 課程
              </a>
              <ul class="dropdown-menu">
                <li>
                 <%= link_to("免費課程", products_path ) %>
                </li>
                <li>
                  <%= link_to("付費課程", products_path ) %>
                </li>
          </ul>
        </div>
      </div>
    </div>
</div>

<div class="row">
  <% @products.each do |product| %>
    <div class="col-xs-6 col-md-3">
      <%= link_to product_path(product) do %>
        <% if product.image.present? %>
          <%= image_tag(product.image.thumb.url, class: "thumbnail") %>
        <% else %>
          <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail") %>
        <% end %>
      <% end %>
      <%= product.title %> $ <%= product.price %>
      类别：<%= Category.find(product.category_id).name %>
      <% if !product.users.include?(current_user) %>
        <%= link_to("收藏",add_to_favorite_product_path(product),method: :post, class: "fa fa-heart") %>
      <% else %>
        <%= link_to("收藏", quit_favorite_product_path(product),method: :post,  class: "fa fa-heart", style: "color:red;") %>
      <% end %>
    </div>
  <% end %>
</div>
